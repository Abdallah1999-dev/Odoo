<odoo>
    <record id="book_tag_view_list" model="ir.ui.view">
         <field name="name">book.tag.view.list</field>
                <field name="model">library.book.tag</field>
                <field name="arch" type="xml">
                     <list editable="bottom">
                         <field name="name"/>
                         <field name="color"  widget="color_picker"/>
                     </list>
                </field>
    </record>

    <record id="book_tag_action" model="ir.actions.act_window">
        <field name="name">Book Tag</field>
        <field name="res_model">library.book.tag</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="library_management_menu_assets_book_tags"
              name="Book Tag"
              parent="library_management_menu_assets"
              action="book_tag_action" sequence="3"/>
</odoo>