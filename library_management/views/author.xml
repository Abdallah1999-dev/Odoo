<odoo>
    <record id="author_view_list" model="ir.ui.view">
        <field name="name">author.view.list</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <list string="Authors" >
                <field name="name"/>
                <field name="biography"/>
                <field name="birth_date"/>
                <field name="nationality"/>
                <field name="book_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="author_view_form" model="ir.ui.view">
        <field name="name">author.view.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Authors">
                <header>
                    <!-- Buttons and statusbar go here -->
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                        <!-- Big title field (like res.partner name) -->
                        <div class="oe_title">
                              <h1>
                                  <field name="name" placeholder="Author Name"/>
                              </h1>
                        </div>
                    <group>
                        <group>
                            <field name="biography"/>
                            <field name="birth_date"/>
                            <field name="nationality"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids">
                                <list create="0" edit="0" delete="0" readonly="1">
                                    <field name="name"/>
                                    <field name="category_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <field name="published_year"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter class="oe_chatter">
                  <field name="message_follower_ids"/>
                  <field name="activity_ids"/>
                  <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="author_action" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="library_management_menu_assets_author"
              name="Author"
              parent="library_management_menu_assets"
              action="author_action"
              sequence="2"
    />
</odoo>